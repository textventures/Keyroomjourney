{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "alwaysStrict": true,
    "sourceMap": false,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "declaration": false,
    "allowJs": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["es2017", "dom"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.test.ts"]
}
